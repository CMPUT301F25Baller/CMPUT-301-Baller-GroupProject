<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="12dp">

    <ImageView
        android:id="@+id/ivEventPoster"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_poster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvEventTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Event Title"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/ivEventPoster"
        app:layout_constraintTop_toTopOf="@id/ivEventPoster"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="12dp"/>

    <TextView
        android:id="@+id/tvEventDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Date"
        app:layout_constraintStart_toStartOf="@id/tvEventTitle"
        app:layout_constraintTop_toBottomOf="@id/tvEventTitle"/>

    <TextView
        android:id="@+id/tvEventLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Location"
        app:layout_constraintStart_toStartOf="@id/tvEventTitle"
        app:layout_constraintTop_toBottomOf="@id/tvEventDate"/>

</androidx.constraintlayout.widget.ConstraintLayout>
