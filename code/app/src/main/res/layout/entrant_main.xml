<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EntrantMainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- This LinearLayout is the main container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Top Bar: Menu and Notifications -->
            <RelativeLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btn_menu"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_menu"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Menu" />

                <ImageButton
                    android:id="@+id/btn_notifications"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_bell"
                    android:layout_alignParentEnd="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Notifications" />
            </RelativeLayout>

            <!-- Header Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find"
                android:textSize="32sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trending Events"
                android:textSize="34sp"
                android:textColor="#8A2BE2"
                android:fontFamily="sans-serif-bold"/>

            <!-- Search Bar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Search event.."
                    android:background="@drawable/search_bar_background"
                    android:paddingStart="48dp"
                    android:paddingEnd="16dp"
                    android:layout_toStartOf="@id/btn_filter"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    android:layout_alignStart="@id/et_search"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    app:tint="#888" />

                <ImageButton
                    android:id="@+id/btn_filter"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_filter"
                    android:background="@drawable/filter_button_background"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="Filter" />
            </RelativeLayout>

            <!-- Filter Chips -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="16dp">

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleLine="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_music"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Music Concert"
                        app:chipBackgroundColor="#E6E0FF"
                        android:textColor="#8A2BE2"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Filter" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_exhibition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exhibition"
                        app:chipBackgroundColor="#FFF8E1"
                        android:textColor="#FFA000"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Filter" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_stand_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stand Up Show"
                        app:chipBackgroundColor="#FFE0E6"
                        android:textColor="#D81B60"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Filter" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_theater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Theater"
                        app:chipBackgroundColor="#E0F7FA"
                        android:textColor="#00838F"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Filter" />

                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

            <!-- This layout will be hidden when searching -->
            <LinearLayout
                android:id="@+id/original_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Trending Events Section -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trending Events"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See all"
                        android:textSize="16sp"
                        android:textColor="#8A2BE2"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_trending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:clipToPadding="false"
                    tools:listitem="@layout/item_event_trending"
                    tools:itemCount="2" />

                <!-- Events Near You Section -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Events Near You"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See all"
                        android:textSize="16sp"
                        android:textColor="#8A2BE2"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_near_you"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:clipToPadding="false"
                    tools:listitem="@layout/item_event_near"
                    tools:itemCount="2"/>

            </LinearLayout>

            <!-- This layout will be SHOWN when searching -->
            <LinearLayout
                android:id="@+id/search_results_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible"> <!-- 'tools:visibility' lets you see it in the preview -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Search Results"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-bold"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_search_results"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:clipToPadding="false"
                    tools:listitem="@layout/item_event_trending"
                    tools:itemCount="1" />

                <TextView
                    android:id="@+id/tv_no_results"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No results found."
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="32dp"
                    android:visibility="gone"
                    tools:visibility="visible"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating QR Code Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_qr_code"
        app:backgroundTint="#5A00FF"
        app:tint="@android:color/white"
        app:shapeAppearanceOverlay="@style/FabCutoutShape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:contentDescription="QR Scanner" />

</androidx.constraintlayout.widget.ConstraintLayout>